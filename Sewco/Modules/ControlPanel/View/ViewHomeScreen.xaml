             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Sewco.Modules.ControlPanel"
             mc:Ignorable="d" 
             d:DesignHeight="1080" d:DesignWidth="1600">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            
            <RowDefinition MinHeight="500" Height="*"/>
        </Grid.RowDefinitions>

        <Image Grid.Row="0" Grid.Column="0" HorizontalAlignment="center" VerticalAlignment="center" Source="/Resources/Images/commonImages/Naaimachine.png" Width="600" >
            
        </Image>
    </Grid>
</UserControl>
